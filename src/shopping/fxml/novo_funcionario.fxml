<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shopping.NovoFuncionarioController">
   <center>
      <FlowPane alignment="CENTER" prefWidth="126.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="63.0" prefWidth="510.0" style="-fx-background-color: #424242;">
               <children>
                  <Label style="-fx-background-color: #424242;" text="Novo Funcionário" textFill="WHITE">
                     <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </VBox.margin>
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <HBox alignment="TOP_CENTER" style="-fx-background-color: #f5f5f5;">
                     <children>
                        <Label fx:id="erro" text="Não foi possível cadastrar o funcionário" visible="false">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <FlowPane alignment="CENTER" orientation="VERTICAL" prefHeight="550.0" prefWrapLength="1000.0">
               <children>
                  <Label text="Dados gerais">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="nome" labelFloat="true" prefColumnCount="25" promptText="Nome">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="cpf" labelFloat="true" prefColumnCount="14" promptText="CPF">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="telefone" labelFloat="true" prefColumnCount="18" promptText="Telefone">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="endereco" labelFloat="true" prefColumnCount="25" promptText="Endereço">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="loja" labelFloat="true" prefColumnCount="19" promptText="Loja (CNPJ)">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="salario" labelFloat="true" prefColumnCount="20" promptText="Salário">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </JFXTextField>
                  <Label text="Função">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </Label>
                  <VBox>
                     <children>
                        <JFXRadioButton text="Gerente">
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </VBox.margin>
                        </JFXRadioButton>
                        <JFXRadioButton text="Vendedor">
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </VBox.margin>
                        </JFXRadioButton>
                        <JFXRadioButton text="Estoquista">
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </VBox.margin>
                        </JFXRadioButton>
                        <JFXRadioButton text="Atendente">
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </VBox.margin>
                        </JFXRadioButton>
                     </children>
                  </VBox>
                  <HBox alignment="TOP_CENTER">
                     <children>
                        <JFXButton buttonType="RAISED" onAction="#cancelar" style="-fx-background-color: #f6685e;" text="CANCELAR" textFill="WHITE">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <padding>
                              <Insets bottom="5.0" left="2.0" right="2.0" top="5.0" />
                           </padding>
                           <HBox.margin>
                              <Insets right="100.0" />
                           </HBox.margin>
                        </JFXButton>
                        <JFXButton buttonType="RAISED" onAction="#cadastrar" style="-fx-background-color: #424242;" text="CADASTRAR" textFill="WHITE">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <padding>
                              <Insets bottom="5.0" left="2.0" right="2.0" top="5.0" />
                           </padding>
                        </JFXButton>
                     </children>
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </HBox>
               </children>
            </FlowPane>
         </children>
      </FlowPane>
   </center>
</BorderPane>
